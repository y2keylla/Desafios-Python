peso_ideal = 50
horas_ideal = 6

peso = int(input("Qual o seu peso?"))
idade = int(input("Qual sua idade?"))
horas_dormidas = int(input("Quantas horas você dormiu na última noite?"))

if peso <= peso_ideal:
    print('Seu peso está abaixo do necessário para doação')

elif peso >= peso_ideal:
    print('Você tem o peso ideal para doar!')

if idade <= 14:
    print('Ah, não! Você é muito novo pra doar!')

elif idade >= 69:
    print('Ah, não! Você é muito velho pra doar!')

else:
    print('Ótimo! você possui a idade ideal para doar!')

if horas_dormidas <= horas_ideal:
    print('Ah, não! Você não atingiu as horas de sono necessárias.')

if horas_dormidas >= horas_ideal:
    print('Ótimo! Você dormiu o suficiente para doar sangue.')
